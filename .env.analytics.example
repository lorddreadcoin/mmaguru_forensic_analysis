# Analytics & Monitoring Environment Variables
# Copy this file to .env.local and fill in your actual values

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Microsoft Clarity
NEXT_PUBLIC_CLARITY_PROJECT_ID=your_clarity_project_id

# Hotjar
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_site_id
NEXT_PUBLIC_HOTJAR_SNIPPET_VERSION=6

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your_key@sentry.io/project_id
SENTRY_ORG=your-org-name
SENTRY_PROJECT=jesseonfire
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# LogRocket Session Recording
NEXT_PUBLIC_LOGROCKET_APP_ID=your-org/jesseonfire

# PostHog Product Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Mixpanel User Analytics
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_project_token

# Custom Web Vitals Endpoint (optional)
NEXT_PUBLIC_VITALS_ENDPOINT=https://your-api.com/vitals

# Vercel Analytics (automatic with Vercel deployment)
# No configuration needed - automatically enabled on Vercel
